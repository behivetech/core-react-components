{
    "name": "core-components",
    "version": "0.1.0",
    "description": "Core components using Material.io for design and the ReactJs Context API",
    "private": true,
    "dependencies": {
        "@babel/core": "7.1.0",
        "@material/auto-init": "^0.39.0",
        "@material/checkbox": "^0.40.1",
        "@material/form-field": "^0.40.1",
        "@material/switch": "^0.40.1",
        "@material/textfield": "^0.40.1",
        "@svgr/webpack": "2.4.1",
        "babel-core": "7.0.0-bridge.0",
        "babel-plugin-named-asset-import": "^0.2.2",
        "babel-preset-react-app": "^5.0.4",
        "bfj": "6.1.1",
        "case-sensitive-paths-webpack-plugin": "2.1.2",
        "chalk": "2.4.1",
        "classnames": "^2.2.6",
        "css-loader": "1.0.0",
        "dotenv": "6.0.0",
        "dotenv-expand": "4.2.0",
        "eslint-config-react-app": "^3.0.4",
        "eslint-plugin-flowtype": "2.50.1",
        "eslint-plugin-import": "2.14.0",
        "eslint-plugin-jsx-a11y": "6.1.2",
        "file-loader": "2.0.0",
        "fs-extra": "7.0.0",
        "html-webpack-plugin": "4.0.0-alpha.2",
        "identity-obj-proxy": "3.0.0",
        "jest": "23.6.0",
        "jest-pnp-resolver": "1.0.1",
        "jest-resolve": "23.6.0",
        "lodash": "^4.17.11",
        "mini-css-extract-plugin": "0.4.3",
        "optimize-css-assets-webpack-plugin": "5.0.1",
        "pnp-webpack-plugin": "1.1.0",
        "postcss-flexbugs-fixes": "4.1.0",
        "postcss-loader": "3.0.0",
        "postcss-preset-env": "6.0.6",
        "postcss-safe-parser": "4.0.1",
        "react": "^16.5.2",
        "react-app-polyfill": "^0.1.3",
        "react-dev-utils": "^6.0.5",
        "react-dom": "^16.5.2",
        "resolve": "1.8.1",
        "style-loader": "0.23.0",
        "terser-webpack-plugin": "1.1.0",
        "url-loader": "1.1.1",
        "validator": "^10.8.0",
        "webpack-dev-server": "3.1.9",
        "webpack-manifest-plugin": "2.0.4",
        "workbox-webpack-plugin": "3.6.2"
    },
    "main": "index.js",
    "scripts": {
        "start": "node scripts/start.js",
        "build": "node scripts/build.js",
        "test": "export default NODE_ENV=test; node scripts/test.js",
        "styleguidist": "npx styleguidist server",
        "styleguidist:build": "npx styleguidist build",
        "styleguidist:deploy": "npx styleguidist build; sleep 2; git push origin `git subtree split --prefix styleguide master`:gh-pages --force"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jbsmith969/core-components.git"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}"
        ],
        "resolver": "jest-pnp-resolver",
        "setupFiles": [
            "react-app-polyfill/jsdom"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/config/jest/jestsetup.js",
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
            "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
        ],
        "testEnvironment": "jsdom",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
            "^.+\\.module\\.(css|sass|scss)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web",
            "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
            "@material/*": "<rootDir>/src/__mocks__/mdc-mock.js"
        },
        "moduleFileExtensions": [
            "web.js",
            "js",
            "json",
            "web.jsx",
            "jsx",
            "node"
        ]
    },
    "keywords": [
        "material",
        "io",
        "core",
        "components",
        "react"
    ],
    "author": "Bruce Smith",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jbsmith969/core-components/issues"
    },
    "homepage": "https://github.com/jbsmith969/core-components#readme",
    "devDependencies": {
        "@babel/preset-env": "^7.1.0",
        "babel-eslint": "^9.0.0",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.4",
        "babel-plugin-dynamic-import-node": "^2.2.0",
        "enzyme": "^3.7.0",
        "enzyme-adapter-react-16": "^1.6.0",
        "eslint": "^5.6.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-jasmine": "^2.10.1",
        "eslint-plugin-jest": "^21.25.1",
        "eslint-plugin-react": "^7.11.1",
        "node-sass": "^4.9.4",
        "react-styleguidist": "^8.0.3",
        "sass-loader": "^7.1.0",
        "webpack": "^4.21.0"
    },
    "babel": {
        "presets": [
            "react-app"
        ]
    }
}
